<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_reclamar_eventousuario"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back_comandato_septiembre"
   android:orientation="vertical"
    tools:context="ec.com.innovasystem.comandato.Actividades.ReclamarEventousuario">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <include layout="@layout/toolbar_menu" android:id="@+id/ltyTool"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:background="@color/transparente"
        android:layout_height="0dp">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_listas"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            />
    </RelativeLayout>
</LinearLayout>
