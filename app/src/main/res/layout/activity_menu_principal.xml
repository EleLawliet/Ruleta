<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:weightSum="1"
    android:background="@mipmap/back_comandato_septiembre"
    android:layout_height="match_parent"
    tools:context=".Actividades.MenuPrincipalActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <include layout="@layout/toolbar" />
    </LinearLayout>

    <LinearLayout
        android:layout_weight="0.2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:weightSum="1"
        android:background="@color/BLANCO_transparente"
        android:paddingRight="10dp"
        android:paddingLeft="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_weight="0.18"
            android:layout_height="90dp"
            android:id="@+id/btnFoto"
            android:layout_marginRight="2dp"
            app:border_color="@android:color/darker_gray"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="10dp"
            android:paddingLeft="5dp">
            <TextView
                android:id="@+id/textNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WILMER VERA GONZÁLEZ"
                android:textStyle="bold"
                android:lines="1"
                android:textColor="@android:color/black"
                android:textSize="12sp"/>

            <TextView
                android:id="@+id/textCorreo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="juniorwavg@gmail.com"
                android:textColor="@color/black_overlay"
                android:textSize="10sp"/>
            <TextView
                android:id="@+id/textMonto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 9934.21"
                android:textColor="@color/black_overlay"
                android:textSize="10sp"/>
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#000"></View>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="0.22"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/ly_desc_content">


                <TextView
                    android:layout_alignBottom="@+id/textNivel"
                    android:layout_width="match_parent"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:text="NIVEL"
                    android:id="@+id/tetxNivel2" />

                <TextView
                    android:id="@+id/textNivel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textStyle="bold"
                    android:paddingTop="17dp"
                    android:paddingBottom="17dp"
                    android:gravity="center"
                    android:textSize="30sp"
                    android:textColor="@color/colorPrimary"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
            </RelativeLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="#000"></View>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="0.23"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/ly_premios_content">
            <TextView
                android:id="@+id/textIntentos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:textColor="@color/ROJO"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingTop="17dp"
                android:paddingBottom="17dp"
                android:gravity="center"
                android:textSize="30sp"
                />
            <TextView
                android:id="@+id/textIntent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_alignBottom="@+id/textIntentos"
                android:textSize="11sp"
                android:text="INTENTOS"/>
        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_weight="0.8"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/scrollView">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1"
            android:gravity="center">

            <LinearLayout
                android:layout_weight="0.6"
                android:gravity="center"
                android:layout_marginLeft="80dp"
                android:layout_marginRight="80dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:id="@+id/ly_participar"
                    android:background="@drawable/button_border"
                    android:drawableLeft="@drawable/monedas_button"
                    android:drawablePadding="10dp"
                    android:padding="15dp"
                    android:text="JUGAR"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginTop="15dp"
                    android:id="@+id/ly_premiosobtenidos"
                    android:background="@drawable/button_border"
                    android:drawableLeft="@drawable/monedas_button"
                    android:drawablePadding="10dp"
                    android:padding="15dp"
                    android:text="PREMIOS"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <Button
                    android:layout_marginTop="15dp"
                    android:id="@+id/ly_Monedas"
                    android:background="@drawable/button_border"
                    android:drawableLeft="@drawable/monedas_button"
                    android:drawablePadding="10dp"
                    android:padding="15dp"
                    android:text="MONEDAS"
                    android:gravity="center|left"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="0.3"
                android:weightSum="1"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <LinearLayout
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageButton
                        android:id="@+id/ly_consultas"
                        android:padding="25dp"
                        android:background="@drawable/button_menu_principal"
                        android:src="@drawable/correo_negro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/textConsulta"
                        android:text="ESCRÍBENOS"
                        android:textStyle="bold"
                        android:textColor="@color/BLANCO"
                        android:gravity="center"
                        android:textSize="11sp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:padding="25dp"
                        android:background="@drawable/button_menu_principal"
                        android:src="@drawable/punto_canje_negro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ly_puntocanje" />

                    <TextView
                        android:id="@+id/textPuntos"
                        android:text="TIENDAS"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/BLANCO"
                        android:textSize="11sp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/textCircle"
                            android:background="@drawable/border_circle_button"
                            android:layout_alignRight="@+id/ly_reclamar"
                            android:text="10"
                            android:gravity="center"
                            android:textColor="@color/BLANCO"
                            android:padding="5dp"
                            android:visibility="gone"
                            android:elevation="10dp"
                            android:layout_width="30dp"
                            android:layout_height="30dp" />

                        <ImageButton
                            android:id="@+id/ly_reclamar"
                            android:paddingTop="23dp"
                            android:paddingBottom="23dp"
                            android:paddingLeft="25dp"
                            android:paddingRight="25dp"
                            android:background="@drawable/button_menu_principal"
                            android:src="@drawable/regalo_comandato"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/textBonificaciones"
                        android:text="REGALOS"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/BLANCO"
                        android:textSize="11sp"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="0.1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <Button
                    android:layout_weight="0.5"
                    android:id="@+id/ly_perfil"
                    android:drawableLeft="@drawable/perfil_persona"
                    android:gravity="center"
                    android:textColor="@color/BLANCO"
                    android:background="@color/transparente"
                    android:text="PERFIL"
                    android:paddingLeft="55dp"
                    android:paddingRight="35dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:layout_weight="0.5"
                    android:id="@+id/btnSubir"
                    android:drawableLeft="@drawable/subir_nivel"
                    android:drawablePadding="15dp"
                    android:background="@color/transparente"
                    android:textColor="@color/BLANCO"
                    android:text="SUBIR NIVEL"
                    android:paddingLeft="35dp"
                    android:paddingRight="30dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</LinearLayout>
