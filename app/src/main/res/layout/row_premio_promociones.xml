<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_weight="1"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:background="@color/BLANCO_transparente"
    android:orientation="vertical">

    <LinearLayout
        android:layout_weight="0.85"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp"
        android:orientation="horizontal"
        android:weightSum="1">
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:layout_height="match_parent">
            <ImageView
                android:layout_weight="0.70"
                android:id="@+id/imgPremio"
                android:layout_gravity="center"
                android:background="@color/BLANCO"
                android:layout_height="0dp"
                android:layout_width="match_parent"
            />

            <TextView
                android:layout_weight="0.17"
                android:id="@+id/TextFecha"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="center"
                android:text="valido hasta 17 january 16"
                android:textColor="@color/black"
                android:textSize="11sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.6"
            android:weightSum="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textPuntos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nivel :1 "
                android:paddingRight="10dp"
                android:gravity="right"
                android:textSize="13sp" />

            <LinearLayout
                android:layout_weight="0.25"
                android:weightSum="1"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <TextView
                    android:id="@+id/textCostoString"
                    android:layout_weight="0.45"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="Costo: "
                    android:textColor="@color/black"
                   />

                <TextView
                    android:layout_weight="0.2"
                    android:id="@+id/textCosto"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                   />

                <LinearLayout
                    android:layout_weight="0.35"
                    android:layout_width="0dp"
                    android:weightSum="1"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_weight="0.2"
                        android:id="@+id/imgMonedas"
                        android:scaleType="fitXY"
                        android:src="@drawable/moneda_oro"
                        android:layout_gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="17dp" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="0.25"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/textDescString"
                    android:layout_weight="0.45"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="Descuento: "
                    android:textColor="@color/black" />

                <TextView
                    android:layout_weight="0.2"
                    android:id="@+id/textCostoPromocion"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="100"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>

                <LinearLayout
                android:layout_weight="0.35"
                android:layout_width="0dp"
                android:weightSum="1"
                android:layout_height="match_parent">
            </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_weight="0.25"
                android:weightSum="1"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <TextView
                    android:id="@+id/textTotalString"
                    android:layout_weight="0.45"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:text="Total:"
                    android:textColor="@color/black" />
                <TextView
                    android:id="@+id/textCostoTotal"
                    android:layout_weight="0.20"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="20"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"/>
                <LinearLayout
                    android:layout_weight="0.35"
                    android:layout_width="0dp"
                    android:weightSum="1"
                    android:layout_height="match_parent">
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:layout_weight=".27"
                android:id="@+id/textCanjear"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:background="@drawable/back_btncanjear"
                android:gravity="center"
                android:text="CANJEAR"
                android:textColor="@color/black" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_weight="0.15"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/textTitulo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="GUANTES"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>