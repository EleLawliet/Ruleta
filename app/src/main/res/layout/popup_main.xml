<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nuestra casa te indica cuantas promociones\n y descuentos existen.\n Para aprovecharlo debes participar y jugar"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|right"
        android:paddingLeft="35dp"
        android:id="@+id/txt_participar"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/icono_participar"
            android:padding="20dp"
            android:background="#E25A29"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PARTICIPAR"
            android:gravity="center_horizontal"
            android:textColor="#231F20"
            android:textStyle="bold"
            android:layout_marginLeft="5dp" />
    </LinearLayout>

</LinearLayout>