<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    android:background="@color/BLANCO"
    android:gravity="center"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_weight="0.4"
        android:weightSum="1"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:layout_weight="0.2"
            android:src="@drawable/flchaizquierda"
            android:tint="@color/black"
            android:layout_width="0dp"
            android:padding="25dp"
            android:layout_height="wrap_content"
            android:id="@+id/imgIzquierda" />

        <ImageView
            android:id="@+id/imgFlip"
            android:layout_weight="0.6"
            android:src="@drawable/flchaizquierda"
            android:layout_width="0dp"
            android:layout_height="match_parent" />
        <ImageView
            android:layout_weight="0.2"
            android:src="@drawable/flchaderecha"
            android:tint="@color/black"
            android:padding="25dp"
            android:id="@+id/imgDerecha"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="0.6"
        android:weightSum="1"
        android:layout_gravity="bottom"
        android:gravity="center|bottom"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_weight="0.5"
            android:weightSum="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_weight="0.5"
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textTitulo"
                    android:layout_weight="0.5"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center|bottom"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
                <TextView
                    android:id="@+id/textDescripcion"
                    android:layout_weight="0.5"
                    android:gravity="center|top"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.5"
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textLugar"
                    android:layout_weight="0.5"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center|bottom"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />

                <TextView
                    android:id="@+id/textDireccion"
                    android:layout_weight="0.5"
                    android:gravity="center|top"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="0.5"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <LinearLayout
                android:layout_weight="0.5"
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textFactura"
                    android:text="Factura"
                    android:gravity="center|bottom"
                    android:layout_weight="0.5"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
                <TextView
                    android:id="@+id/textDescripcionFactura"
                    android:layout_weight="0.5"
                    android:gravity="center|top"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="0.5"
                android:weightSum="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:text="Compra"
                    android:gravity="center|bottom"
                    android:id="@+id/textCompra"
                    android:layout_weight="0.5"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" />
                <TextView
                    android:id="@+id/textDescripcionCompra"
                    android:layout_weight="0.5"
                    android:gravity="center|top"
                    android:layout_width="match_parent"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:layout_height="0dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>